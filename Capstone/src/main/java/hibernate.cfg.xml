<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
	    <!-- The dialect specifies the type of database used in hibernate so that hibernate generate appropriate type of SQL statements. -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://http://ec2-3-145-108-22.us-east-2.compute.amazonaws.com:3306/CSA</property>
		<property name="hibernate.connection.username">nangatid</property>
		<property name="hibernate.connection.password">TKey</property>
		<!-- you can create and update the table if it is not in DB. If create, it create new table everytime-->
		<property name="hibernate.hbm2ddl.auto">update</property>
		<!-- True you will see sql in console -->
		<property name="show_sql">true</property>
		<mapping class="models.Account" />
		<mapping class="models.Building" />
		<mapping class="models.Classroom" />
		<mapping class="models.Course" />
		<mapping class="models.Department" />
		<mapping class="models.Enrollment" />
		<mapping class="models.Instructor" />
		<mapping class="models.Schedule" />
		<mapping class="models.Section" />
	</session-factory>
</hibernate-configuration>